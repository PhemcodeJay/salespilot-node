<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Password Recovery</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="http://localhost:5000/assets/images/favicon.ico" />
    <link rel="stylesheet" href="http://localhost:5000/assets/css/backend-plugin.min.css">
    <link rel="stylesheet" href="http://localhost:5000/assets/css/backend.css?v=1.0.0">
    <link rel="stylesheet" href="http://localhost:5000/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
    <link rel="stylesheet" href="http://localhost:5000/assets/vendor/line-awesome/dist/line-awesome/css/line-awesome.min.css">
    <link rel="stylesheet" href="http://localhost:5000/assets/vendor/remixicon/fonts/remixicon.css">
</head>

<body>
    

    <div class="wrapper">
        <section class="login-content">
            <div class="container">
                <div class="row align-items-center justify-content-center height-self-center">
                    <div class="col-lg-8">
                        <div class="card auth-card">
                            <div class="card-body p-0">
                                <div class="d-flex align-items-center auth-content">
                                    <div class="col-lg-7 align-self-center">
                                        <div class="p-3">
                                            <h2 class="mb-2" style="font-weight: bold; text-decoration: underline;">Reset Password</h2>
                                            <p style="font-weight: bold; text-decoration: underline;">Enter your New Password</p>

                                            <!-- Password Reset Form -->
                                            <form method="post" action="/auth/resetpassword">
                                                <div class="form-group">
                                                    <label for="new_password" style="font-weight: bold; text-decoration: underline;">New Password</label>
                                                    <input type="password" name="new_password" id="new_password" required class="form-control">
                                                </div>

                                                <div class="form-group">
                                                    <label for="confirm_password" style="font-weight: bold; text-decoration: underline;">Confirm Password</label>
                                                    <input type="password" name="confirm_password" id="confirm_password" required class="form-control">
                                                </div>

                                                <button class="btn btn-primary mt-3" type="submit">Reset Password</button>
                                            </form>
                                        </div>
                                    </div>
                                    <div class="col-lg-5 content-right">
                                        <img src="http://localhost:5000/assets/images/login/auth.png" class="img-fluid image-right" alt="">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>
